@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Redmine Issues</title>
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <h1>Redmine Issues</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Issue ID</th>
                <th>Status</th>
                <th>Assignee</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var issueDetail in Model.IssueDetails)
            {
                var details = issueDetail.Split('|');
                    <tr>
                        <td>@details[0]</td>
                        <td>@details[1]</td>
                        <td>@details[2]</td>
                        <td>@details[3]</td>
                    </tr>
            }
        </tbody>
    </table>
</body>
</html>
